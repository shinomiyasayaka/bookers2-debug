<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  		<%= render 'layouts/errors', obj: @book %>

  		<%= form_with model: @book do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :opinion %>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book' %>

      <% end %>

  		<%= link_to 'Show', book_path(@book.id) %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>